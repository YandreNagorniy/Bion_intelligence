<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/text_soil_factors"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounder_square"
            android:padding="8dp">

            <TableRow>

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_N"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_xs"
                    android:layout_weight="1"
                    app:item_name="N"
                    app:item_text="мг/кг"
                    app:item_value="34" />

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_P2O5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    app:item_name="P2O5"
                    app:item_text="мг/кг"
                    app:item_value="4" />

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_K2O"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:item_name="K2O"
                    app:item_text="мг/кг"
                    app:item_value="34" />
            </TableRow>

            <TableRow>

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_CaO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_xs"
                    android:layout_weight="1"
                    app:item_name="CaO"
                    app:item_text="мг-экв 100г."
                    app:item_value="22" />

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_MgO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    app:item_name="MgO"
                    app:item_text="мг-экв 100г."
                    app:item_value="4" />

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_S"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:item_name="S"
                    app:item_text="мг/кг"
                    app:item_value="34" />
            </TableRow>

            <TableRow>

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_Zn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_xs"
                    android:layout_weight="1"
                    app:item_name="Zn"
                    app:item_text="мг/кг"
                    app:item_value="22" />

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_Cu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    app:item_name="Cu"
                    app:item_text="мг/кг"
                    app:item_value="4" />

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_Mn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:item_name="Mn"
                    app:item_text="мг/кг"
                    app:item_value="34" />
            </TableRow>

            <TableRow>

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_Co"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_xs"
                    android:layout_weight="1"
                    app:item_name="Co"
                    app:item_text="мг/кг"
                    app:item_value="22" />

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_Mo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    app:item_name="Mo"
                    app:item_text="мг/кг"
                    app:item_value="4" />

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_B"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:item_name="B"
                    app:item_text="мг/кг"
                    app:item_value="34" />
            </TableRow>

            <TableRow>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.example.bionintelligence.presentation.custom.SoilFactorView
                    android:id="@+id/sfv_Fe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    app:item_name="Fe"
                    app:item_text="мг/кг"
                    app:item_value="4" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounder_square"
            android:padding="3dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_values_dark_green">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:text="@string/text_humus_reserves"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/gl1_s1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/gl1_s1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="G"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/gl1_s1"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/sf_G"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="339dp"
                    tools:text="3.2" />

                <android.support.constraint.Guideline
                    android:id="@+id/gl1_s1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7" />
            </android.support.constraint.ConstraintLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounder_square"
            android:padding="3dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_values_dark_green">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:maxLines="2"
                    android:text="Обменная кислотность почвы"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/gl2_s1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/gl2_s1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="pH"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/gl2_s1"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/sf_pH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="3.2" />

                <android.support.constraint.Guideline
                    android:id="@+id/gl2_s1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7" />
            </android.support.constraint.ConstraintLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/text_moisture_supply"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounder_square"
            android:padding="3dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_values_dark_green">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:maxLines="2"
                    android:text="Запасы продуктивной влаги в слое почвы 1м, мм"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/gl3_s1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/gl3_s1"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/sf_ZPV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/gl3_s1"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="270" />

                <android.support.constraint.Guideline
                    android:id="@+id/gl3_s1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7" />
            </android.support.constraint.ConstraintLayout>
        </FrameLayout>
    </LinearLayout>
</layout>